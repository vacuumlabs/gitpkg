{
  "name": "@vacuumlabs/gitpkg",
  "version": "1.0.0-beta.1",
  "description": "Publish packages as git tags",
  "main": "build/index.js",
  "scripts": {
    "build": "babel src -d build -s",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "clean": "rimraf ./build",
    "lint": "eslint .",
    "prepublish": "yarn run clean --silent && yarn run build",
    "test-ci-partial": "yarn run test-coverage --silent",
    "test-ci": "yarn run lint --silent && yarn run test-ci-partial --silent && codecov",
    "test-coverage": "yarn run jest --silent -- --coverage",
    "test": "jest"
  },
  "author": {
    "name": "Ramiro Silveyra d'Avila",
    "twitter": "ramasilveyra"
  },
  "contributors": [
    "Istvan Szentandrasi <istvan.szentandrasi@vacuumlabs.com>"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "bin": "./bin/gitpkg.js",
  "files": [
    "bin",
    "build"
  ],
  "repository": "git@github.com:vacuumlabs/gitpkg.git",
  "keywords": [
    "git",
    "packages",
    "registry",
    "modules"
  ],
  "dependencies": {
    "chalk": "^3.0.0",
    "del": "^5.1.0",
    "end-of-stream": "^1.4.0",
    "execa": "^4.0.0",
    "find-up": "^4.1.0",
    "git-remote-origin-url": "^3.1.0",
    "make-dir": "^3.0.2",
    "ora": "^4.0.3",
    "semver": "^7.1.3",
    "tar-fs": "^2.0.0",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "babel-eslint": "^10.1.0",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-preset-env": "^1.5.2",
    "codecov": "^3.6.5",
    "conventional-changelog-cli": "^2.0.31",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "folder-hash": "^3.3.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "prettier": "^1.19.0",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2"
  },
  "gitpkg": {
    "registry": "git@github.com:vacuumlabs/gitpkg-public-registry.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/bin/**",
      "!**/coverage/**"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ]
  }
}
